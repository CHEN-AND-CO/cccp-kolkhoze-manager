{% extends '@FrontOffice/base.html.twig' %}

{# Head part #}
	{% block title %}
		
	{% endblock %}

	{% block styles %}
		
	{% endblock %}

	{% block scripts %}
		
	{% endblock %}

	{% block head %}
		
	{% endblock %}
{# End Head part #}
{# Body part #}
	{% block header %}
		<h1>FrontOffice Accueil</h1>
	{% endblock %}

	{% block body %}
		<table>
			<thead>
				<th>Date</th>
				<th>Type</th>
				<th>Distance</th>
				<th>Montant</th>
				<th>Action</th>
			</thead>
			<tbody>
				{% for trip in trips %}
					<tr>
						<td>{{ trip.date|date('d/m/Y') }}</td>
						<td>{{ trip.type }}</td>
						<td>{{ trip.distance }}</td>
						<td>{{ trip.amount }}</td>
						<td>
							{% if trip.validated %}
							<a href="edit/{{ trip.id }}">Edit</a>
							{% else %}
								-
							{% endif %}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endblock %}

	{% block footer %}
		
	{% endblock %}
{# End Body part #}
